.wrapper-detail
  .cover-area
    height 282px
    background-color #ebf0ed
    overflow hidden
    .cover-wrap
      margin-top 24px
      .cover
        width 144px
        height 212px
        margin 0 auto
        box-shadow 0px 2px 4px 0px rgba(0, 0, 0, 0.27)
        .img
          width 100%
          height 100%
      .shadow
        width 222px
        height 18px
        margin 16px auto 0
        background-image radial-gradient(ellipse closest-side, rgba(0,0,0,.2), rgba(0,0,0,0))
  .content
    padding 12px 24px 60px
    .title
      font-size 22px
      color #3b3b41
    .author
      margin-top 4px
      font-size 16px
      color #5d5d5d
    .intro
      margin-top 12px
      color #5d5d5d
      font-size 16px
      letter-spacing 2px
  .bottom-tool
    position fixed
    bottom 0
    left 0
    right 0
    display flex
    justify-content space-between
    height 50px
    border-top 1px solid #eaeaea
    .like
      display flex
      justify-content center
      align-items center
      flex 22 22 
      background #ffffff
      color #8b8b8b
      border-right 1px solid #eaeaea
      .icon-xihuan
        color #8b8b8b
      .icon-xiangkan
        color #dd3c3c
      .num
        margin-left 6px
    .share
      display flex
      justify-content center
      align-items center
      flex 22 22  
      border-right 1px solid #eaeaea
      background #ffffff
      color #82c89b
      .name
        margin-left 6px
    .btn
      display flex
      justify-content center
      align-items center
      flex 31 31 
      background #82c89b
      color #f4f9f6
      &.disable
        background #e6e6e6
        color #818985

