.wrapper-books
  .top-nav
    height 48px
    background #ffffff
    box-shadow 0px 5px 12px 0px rgba(0, 0, 0, 0.05)
    display flex
    .nav-item
      flex 1 1 50%
      line-height 48px
      text-align center
      color #5e625f
      font-size 16px
      font-weight bold
      &.active
        color #82c89b
        border-bottom 4px solid #93dfac
  .content
    padding 24px 18px
    .books-wrap
      display flex
      justify-content flex-start
      flex-wrap wrap
      .book-item
        flex 0 0 89px
        margin 0 12px 24px
        .cover
          width 89px
          height 128px
          box-shadow 0px 2px 8px 0px rgba(0, 0, 0, 0.4)
          .img
            width 100%
            height 100%
        .title
          margin-top 8px
          width 100%
          height 44px
          overflow hidden
          color #2c2e2d
          font-size 16px
          text-align center
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical