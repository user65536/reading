.wrapper-mine
  .card-area
    height 272px
    background #f2f5f2
    overflow hidden
    .card
      position relative
      height 174px
      width 318px
      margin 24px auto 
      box-shadow 0px 0px 12px 0px rgba(0, 0, 0, 0.17)
      background #ffffff
      border-radius 8px
      .info
        position absolute
        display flex
        align-items center
        top 16PX
        left 16PX
        .ava
          flex 0 0 auto
          height 44px
          width 44px
          border-radius 100%
          overflow hidden
          .img
            width 100%
            height 100%
        .text
          flex 0 0 auto
          margin-left 12px
          font-size 16px
          color #222222
      .recommend
        position absolute
        right 16px
        bottom 16px
        font-size 14px
        color #4d4f4e
  .content
    border-radius 16px 16px 0 0
    background #ffffff
    transform translateY(-24px)
    border-top 1px solid #e9e9e9
    .content-header
      display flex
      justify-content space-between
      align-items center
      margin 0 14px
      padding 12px 10px
      border-bottom 1px solid #D2D2D2
      .title
        font-size 16px
        color #4d4f4e
      .tools
        display flex
        justify-content space-between
        align-items center
        margin-right 10px
        color #5D5F5F
        .tool-item
          display flex
          justify-content space-between
          align-items center
          margin-left 16px
          .icon-add-line
            font-size 18px 
          .name
            margin-left 4px
            font-size 14px
    .books-wrap
      display flex
      justify-content flex-start
      flex-wrap wrap
      margin-top 24px
      padding 0 9px
      .book-item
        flex 0 0 89px
        margin 0 15px 24px
        .cover
          position relative
          width 89px
          height 128px
          box-shadow 0px 2px 8px 0px rgba(0, 0, 0, 0.4)
          .img
            width 100%
            height 100%
          .bottom-mask
            position absolute
            bottom 0 
            left 0 
            right 0
            height 20px
            padding 0 8px
            background-image linear-gradient(90deg, rgba(3, 3, 3, 0.69) 0%, rgba(0, 0, 0, 0) 100%)
            line-height 20px
            color #E7E7E7
            font-size 10px
        .title
          margin-top 8px
          width 100%
          height 44px
          overflow hidden
          color #2c2e2d
          font-size 16px
          text-align center
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
      